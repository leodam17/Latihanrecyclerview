<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/gambarWayang"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/namaWayang"
        app:layout_constraintWidth_percent="0.4"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/namaWayang"
        android:layout_width="0dp"
        android:layout_marginLeft="2.5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="namaWayang"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/gambarWayang"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Nama Wayang" />

    <TextView
        android:id="@+id/karakterWayang"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="karakterWayang"
        android:textColor="#00A36C"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/namaWayang"
        app:layout_constraintStart_toEndOf="@id/gambarWayang"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Karakter Wayaang" />

    <TextView
        android:id="@+id/deskrpsiWayang"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="deskrpsiWayang"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gambarWayang"
        app:layout_constraintTop_toBottomOf="@id/karakterWayang"
        tools:text="Deskripsi Wayang" />

</androidx.constraintlayout.widget.ConstraintLayout>
